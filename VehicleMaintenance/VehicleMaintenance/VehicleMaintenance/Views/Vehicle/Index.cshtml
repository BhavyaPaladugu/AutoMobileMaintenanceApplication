@model IEnumerable<VehicleMaintenance.DAL.Models.Vehicle>

@{
    ViewBag.Title = "Vehicles - Display";
}

<p>
    @Html.ActionLink("Add New Vehicle", "Create")
</p>

@if (Model.Count() != 0)
{
    <h3>Available Vehicles</h3>
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OdometerReading)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType.VehicleTypeName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.VehicleId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.VehicleId })
                </td>
            </tr>
        }
    </table>
}




